<?xml version="1.0" encoding="UTF-8"?>
<site site="http://.*\.tvcatchup\.com"
	plugin="(?i).*tvcatchupwebplayer.*\.swf"
	agent="Mozilla/5.0 (Macintosh; U; Intel Mac OS X 10.6; en-US; rv:1.9.2.10) Gecko/20100914 Firefox/3.6.10"
	identifier="com.sander1.tvcatchup"
	initialState="wait-for-frame-load"
	version="2.0">

	<crop x="0" y="0" width="0" height="0" />

	<condition name="need-to-login">
		<and>
			<javascript script="check = $('#TVCatchupWebPlayer').length==0 ? 1 : 0" matches="1" />
		</and>
	</condition>

	<state name="wait-for-frame-load">
		<event>
			<condition>
				<frameLoaded />
			</condition>
			<action>
				<goto state="check-for-auth" />
			</action>
		</event>
	</state>

	<state name="check-for-auth">
		<event>
			<condition>
				<not>
					<condition name="need-to-login" />
				</not>
			</condition>
			<action>
				<goto state="playing" />
			</action>
		</event>
		<event>
			<condition>
				<condition name="need-to-login" />
			</condition>
			<action>
				<run script="var post_url='http://www.tvcatchup.com/login.html';var post_data={username:'${username}',password:'${password}', login:'1'};jQuery.post(post_url,post_data);" />
				<pause time="5000" />
				<visit url="${url}" />
				<goto state="playing" />
			</action>
		</event>
	</state>

	<state name="playing">
		<event>
			<condition>
				<javascript script="true ? 1 : 0" matches="1" />
			</condition>
			<action>
				<!-- nothing to do -->
			</action>
		</event>
	</state>

</site>